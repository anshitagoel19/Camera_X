<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="fill_parent"
        android:layout_height="412dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_weight="3"
        />

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        >

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        >

        <ImageButton
            android:id="@+id/legal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="#00000000"
            app:srcCompat="@drawable/legal" />

        <ImageButton
            android:id="@+id/a4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#00000000"
            app:srcCompat="@drawable/a4" />

        <ImageButton
            android:id="@+id/letter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:background="#00000000"
            app:srcCompat="@drawable/letter" />

        <ImageButton
            android:id="@+id/auto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/auto" />


    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

        <ImageButton
            android:id="@+id/gallery"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="#00000000"
            app:srcCompat="@drawable/gallery_01" />

        <ImageButton
            android:id="@+id/camera_capture_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:background="#00000000"
            android:elevation="2dp"
            android:scaleType="fitCenter"
            tools:layout_editor_absoluteX="155dp"
            tools:layout_editor_absoluteY="545dp"
            app:srcCompat="@drawable/ic_radio_button_checked_black_24dp" />

    <ImageButton
        android:id="@+id/done"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="#00000000"
        app:srcCompat="@drawable/done" />

</LinearLayout>




</LinearLayout>

